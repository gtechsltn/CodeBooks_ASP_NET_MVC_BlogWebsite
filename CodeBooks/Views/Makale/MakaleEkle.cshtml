@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Makale Ekle";
}
@model CodeBooks.Models.Makale

<br />
<div class="mr-5 ml-5">
    <form action="/Makale/MakaleEkle" method="post" class="form-group">

        <b>Kategori :</b>
        @Html.DropDownListFor(x => x.kategori.KategoriID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })

        <b>Makale Başlığı :</b>
        <input type="text" name="Baslik" class="form-control" />
        <br />
        <b>Yazar Adı :</b>
        <input type="text" name="yazar" class="form-control" />
        <br />
        <b>Makale:</b>
        <textarea class="form-control" name="Text" id="texteditor">  </textarea>
        <br />




        <input type="submit" class="fadeIn fourth btn btn-outline-success" value="Ekle">
    </form>

</div>

@section Scripts{
    
    <script src="~/ckeditor5-34.1.0-kw2j603dljbx/build/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#texteditor'), {

                licenseKey: '',



            })
            .then(editor => {
                window.editor = editor;




            })
            .catch(error => {
                console.error('Oops, something went wrong!');
                console.error('Please, report the following error on https://github.com/ckeditor/ckeditor5/issues with the build id and the error stack trace:');
                console.warn('Build id: kw2j603dljbx-px5xuqpzaudd');
                console.error(error);
            });
    </script>


}